  "engines": {
    "node": "10"
  },
  "main": "lib/index.js",
  "dependencies": {
    "@google-cloud/pubsub": "^2.5.0",
    "@types/algoliasearch": "^3.34.10",
    "@types/uuid": "^8.3.0",
    "algoliasearch": "^4.5.1",
    "axios": "^0.20.0",
    "child-process-promise": "^2.2.1",
    "crossref": "^1.2.1",
    "firebase-admin": "^8.10.0",
    "firebase-functions": "^3.6.1",
    "uuid": "^8.3.0"
  },
  "devDependencies": {
    "@types/node": "^14.11.8",
    "firebase-functions-test": "^0.2.0",
    "husky": "^4.3.0",
    "lint-staged": "^10.4.0",
    "prettier": "2.1.2",
    "tslint": "^5.12.0",
    "typescript": "^3.8.0"
  },
  "private": true,
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts}": ["prettier --write", "tsc", "tslint --project tsconfig.json"]
